    <section class="slice slice--offset-top bg-base-1" style="padding-bottom: 250px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 pt-5">
                  <div style="padding-bottom: 150px">
                    <h3 class="heading display-4 strong-400 c-white">
                        Créer un compte
                    </h3>

                      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <%= devise_error_messages! %>

                        <div class="field">
                          <%= f.label :firstname, "Prénom", class: "c-white"  %><br />
                          <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname" %>
                        </div>

                        <div class="field">
                          <%= f.label :lastname, "Nom", class: "c-white"  %><br />
                          <%= f.text_field :lastname, autocomplete: "lastname" %>
                        </div>

                        <div class="field">
                          <%= f.label :email, class: "c-white"  %><br />
                          <%= f.email_field :email, autocomplete: "email" %>
                        </div>

                        <div class="field">
                          <%= f.label :password, "Mot de passe", class: "c-white"  %>
                          <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                          <% end %><br />
                          <%= f.password_field :password, autocomplete: "off" %>
                        </div>

                        <div class="field">
                          <%= f.label :password_confirmation, "Confirmez votre mot de passe", class: "c-white"  %><br />
                          <%= f.password_field :password_confirmation, autocomplete: "off" %>
                        </div>

                        <div class="actions">
                          <%= f.submit "Sign up" %>
                        </div>
<% end %>

</div>
</div>
</div>
</div>
