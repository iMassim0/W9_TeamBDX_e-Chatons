<p id="notice"><%= notice %></p>

<div class="row justify-content-center">
  <div class="col-8">
    <table class="table">
      <thead>
        <tr class="text-align-center">
          <th>Article</th>
          <th>Prix</th>
          <th>Quantité</th>
        </tr>
      </thead>
      <% if @cart.added_items.length > 0 %>
      <tbody>
        <% @user.added_items.each do |item| %>
          <tr scope="row">
            <td><%= item.title %></td>
            <td><%= (item.price).round %> €</td>
            <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            <td><%= link_to 'Voir', thumbnail_path(item.id), remote: true %></td>
          </tr>
        <% end %>
      </tbody>
        <%= "Panier id : #{@cart.id}" %>
        <% else %>
        <p>Paner vide!</p>
        <%= "Panier id : #{@cart.id}" %>
        <% end %>
    </table>
  </div>

  <div class="col-3">
    <div id="item-content"></div>
  </div>
</div>
