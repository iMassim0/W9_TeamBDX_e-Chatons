<p id="notice"><%= notice %></p>

                    <!-- PAGE HEADER -->
                        <div class="container">
                            <div class="row">
                                <div class="col-12">
                                    <div class="row py-5">
                                        <div class="col-lg-6 col-md-8">
                                            <h1 class="heading heading-1 strong-400 text-normal">
                                                <%= @item.title %>
                                            </h1>

                                            <span class="clearfix"></span>

                                            <div class="lead mt-3 mb-3">
                                                <%= @item.description %>
                                            </div>

                                            <span class="short-delimiter--style-1 mb-4"></span>

                                            <div class="shop-default shop-minimalist">
                                                <div class="row-wrapper">
                                                    <div class="row cols-xs-space cols-sm-space cols-md-space">
                                                        <div class="col-md-6">
                                                            <div class="block product no-radius">
                                                                <div class="product-image">
                                                                    <div class="view view-first">
                                                                        <a href="#">
                                                                            <%= image_tag "#{@item.image_url}" %>
                                                                        </a>
                                                                    </div>

                                                                    <div class="product-actions--a product-actions--2" data-animation-in="slideInRight" data-animation-out="slideOutRight">
                                                                        <button type="button" class="btn-product-action">
                                                                            <i class="ion-bag"></i>
                                                                        </button>

                                                                        <button type="button" class="btn-product-action">
                                                                            <i class="ion-ios-heart-outline"></i>
                                                                        </button>
                                                                    </div>
                                                                </div>

                                                                <div class="block-body px-0">
                                                                    <h3 class="heading heading-6 strong-500 text-capitalize mb-0"></h3>
                                                                    <span class="star-rating star-rating-sm">
                                                                        <i class="fa fa-star"></i>
                                                                        <i class="fa fa-star"></i>
                                                                        <i class="fa fa-star"></i>
                                                                        <i class="fa fa-star-o"></i>
                                                                        <i class="fa fa-star-o"></i>
                                                                    </span>
                                                                    <div class="price-wrapper">
                                                                        <span class="price heading-6 c-gray-light strong-400">$<span class="price-value"><%= @item.price %></span></span>
                                                                    </div>
                                                                    <% if user_signed_in? %>
                                                                    <%= link_to 'Buy', adding_path(@item), method: 'post', class: "btn btn-info" %>
                                                                    <%= link_to 'Edit', edit_item_path(@item), class: "btn btn-warning"%> |
                                                                    <%= link_to 'Back', items_path, class: "btn btn-light"%>
                                                                    <% end %>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
