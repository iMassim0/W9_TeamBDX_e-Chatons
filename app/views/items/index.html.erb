



<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Items</h1>
  <table class="table">
    <thead>
      <tr class="text-align-center">
        <th>Title</th>
        <th>Image</th>
        <th>Description</th>
        <th>Price</th>
        <th>Update?</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr scope="row">
          <td><%= item.title %></td>
          <td><%= image_tag "#{item.image_url}", class: "items" %></td>
          <td><%= item.description %></td>
          <td><%= (item.price).round %> â‚¬</td>
          <td><%= link_to 'Show', item_path(item), class: "btn btn-primary" %></td>
          <% if current_user.role == "admin" %>
          <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Item', new_item_path, class: "btn btn-info" %>
</div>
