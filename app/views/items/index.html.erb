



<div class="container w-75">
  <p id="notice"><%= notice %></p>
  <h1>Items</h1>
  <table class="table table-bordered text-center">
    <thead>
      <tr class="text-align-center">
        <th>Title</th>
        <th>Image</th>
        <th>Description</th>
        <th>Price</th>
        <th colspan="3">Update?</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr scope="row text-center">
          <td><%= item.title %></td>
          <td><%= cl_image_tag item.item_pic_url, class: "items" %></td>
          <td><%= item.description %></td>
          <td><%= (item.price).round %> â‚¬</td>
          <th class="d-flex flex-column mt-3 mb-3"><%= link_to 'Show', item_path(item), class: "btn btn-primary" %></th>
          <% if user_admin? %>
          <th class="d-flex flex-column mb-3"><%= link_to 'Edit', edit_item_path(item), class: "btn btn-warning" %></th>
          <th class="d-flex flex-column mb-3"><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></th>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Item', new_item_path, class: "btn btn-info" %>
</div>
