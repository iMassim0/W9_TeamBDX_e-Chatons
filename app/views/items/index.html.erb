<div class="container w-100">
  <p id="notice"><%= notice %></p>
  <h1>Items</h1>
  <table class="table table-bordered text-center">
    <thead>
      <tr class="text-align-center">
        <th>Title</th>
        <th>Image</th>
        <th>Description</th>
        <th>Price</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr scope="row text-center">
          <td><%= item.title %></td>
          <td><%= cl_image_tag item.item_pic_url, class: "items", size: "200vw" %></td>
          <td><%= item.description %></td>
          <td><%= (item.price).round %> â‚¬</td>
          <td>
          <%= link_to 'Show', item_path(item), class: "btn btn-primary mb-3 mw-100" %></td>
          <% if user_admin? %>
          </td>
          <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-warning mb-3 mw-100" %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mb-3 mw-100" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Item', new_item_path, class: "btn btn-info" %>
</div>
